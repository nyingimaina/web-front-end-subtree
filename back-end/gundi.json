{
  "Label": "Lucent Ledger Backend",
  "BuildCommands": ["dotnet test"],
  "DisabledStages": ["CopyToStagingDirectory", "PublishToRepository"],
  "BuildOutputDirectory": "",
  "PublishUrl": "",
  "OnSuccessPostBuildCommands": [
    {
      "Command": "cat version.txt"
    },
    {
      "Command": "pipe_variable version"
    },
    {
      "Command": "docker build -t nyingi/lucent-ledger-backend:$version ."
    },
    {
      "Command": "docker login -u=nyingi -p=pentium1.2"
    },
    {
      "Command": "docker push nyingi/lucent-ledger-backend:$version"
    }
  ]
}
